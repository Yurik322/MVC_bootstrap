@{
    ViewBag.Title = "NewGuestList";
}

<h2>Guest</h2>
<div class="comments">
    @foreach ((string author, string comment, DateTime date) comment in ViewBag.Comments)
    {
        <div class="comment-text">
            <h5>Author: @comment.author<span class="comment-text">@comment.date</span></h5>
            <p>@comment.comment</p>
        </div>
    }
</div>