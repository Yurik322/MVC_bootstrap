@{
    ViewData["Title"] = "Guest";
}

<h2>Guest</h2>
<div class="comments">
    @foreach ((string name, string text, DateTime date) comment in ViewBag.Comments)
    {
        <div class="comment-text">
            <h5>Author: @comment.name<span class="comment-text">@comment.date</span></h5>
            <p>@comment.text</p>
        </div>
    }
    <div class="comment-form">
        <form method="post">
            <p>
                <label>Author:</label><br/>
                <input class="input" id="author" type="text" name="author" required/>
            </p>
            <p>
                <label>Comment:</label><br/>
                <textarea class="input" id="comment" type="text" name="comment" required></textarea>
            </p>
            <p>
                <label>Date:</label><br/>
                <textarea type="hidden" class="hidden" id="date" name="date" readonly>@DateTime.Now</textarea>
            </p>
            <p>
                <input type="submit" value="Send"/>
            </p>
        </form>
    </div>
</div>